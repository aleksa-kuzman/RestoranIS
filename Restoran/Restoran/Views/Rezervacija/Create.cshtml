@model Restoran.ViewModels.RezervacijaViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Rezerviši</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rezervacija</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.sto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m=> m.sto, new SelectList(Model.stoloviLista,"BrojStola", "BrojStola"),"",new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sto, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.gost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.gost, new SelectList(Model.gostiLista, "Id","Imeprezime"),"" ,new { @class = "form-control", placeholder = "Gost" })
              @*  @Html.EditorFor(model => model.GostId, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.gost, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.datumVreme, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.datumVreme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.datumVreme, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          @*  @Html.LabelFor(model => model.BrojRezervacije, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
             @*   @Html.EditorFor(model => model.BrojRezervacije, new { htmlAttributes = new { @class = "form-control" } })*@
              @*  @Html.ValidationMessageFor(model => model.BrojRezervacije, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rezervisi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")|
    @Html.ActionLink("Dodaj gosta","Create","Gost")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<Restoran.Models.Proizvod>

@{
    ViewBag.Title = "Details";
}

<h2>Izaberite tip proizvoda</h2>

<p>
    @Html.ActionLink("Dodaj proizvod", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipProizvod)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipProizvod.Naziv)
            </td>
            <td>
                @Html.ActionLink("Izmeni", "Edit","Proizvod", new { id = item.Id },null) |
                @Html.ActionLink("Obrisi", "Delete", "Proizvod", new { id = item.Id },null)
            </td>
        </tr>
    }

</table>
